@using DoAnTotNghiep.Shared
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center gap-2">
            <div class="me-2">
                <TicketNotification />
            </div>

            <NavLink class="nav-link d-flex align-items-center text-primary fw-semibold" href="profile">
                <i class="bi bi-person-circle me-1"></i> 
                <span>Hồ sơ</span>
            </NavLink>

            <span class="text-primary me-2 fw-semibold">
                Xin chào, @context.User.Identity?.Name!
            </span>

            <LogoutButton />
        </div>
    </Authorized>

    <NotAuthorized>
        <div class="d-flex gap-2">
            <!-- Đăng ký -->
            <button class="btn btn-outline-primary btn-sm rounded-pill px-3"
                    @onclick="@(() => Navigation.NavigateTo("/register", forceLoad: true))">
                <i class="bi bi-person-plus"></i> Đăng ký
            </button>

            <button class="btn btn-primary btn-sm rounded-pill px-3"
                    @onclick="@(() => Navigation.NavigateTo("/login", forceLoad: true))">
                <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
            </button>
        </div>
    </NotAuthorized>
</AuthorizeView>
