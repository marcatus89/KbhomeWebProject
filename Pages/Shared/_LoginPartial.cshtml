@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <!-- Khi đã đăng nhập -->
    <li class="nav-item me-2">
        <span class="text-dark fw-semibold">
            Xin chào, @UserManager.GetUserName(User)!
        </span>
    </li>
    <li class="nav-item">
        <component type="typeof(DoAnTotNghiep.Shared.LogoutButton)" render-mode="ServerPrerendered" />
    </li>
}
else
{
    <!-- Khi chưa đăng nhập -->
    <li class="nav-item me-2">
        <a href="/register" class="btn btn-outline-warning btn-sm rounded-pill px-3">
            <i class="bi bi-person-plus"></i> Đăng ký
        </a>
    </li>
    <li class="nav-item">
        <a href="/login" class="btn btn-warning btn-sm rounded-pill px-3 text-dark">
            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
        </a>
    </li>
}
</ul>
