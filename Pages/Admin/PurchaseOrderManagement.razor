@page "/admin/purchase-orders"
@page "/admin/purchase-orders/page/{PageNumber:int}"
@attribute [Authorize(Roles = "Admin, Purchasing, Warehouse")]
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims
@using DoAnTotNghiep.Models
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
    <div class="d-flex align-items-center">
        <h3 class="mb-0 ms-3">Quản lý Đơn nhập hàng</h3>
    </div>

    <AuthorizeView Roles="Admin, Purchasing">
        <div class="mb-3">
            <a class="btn btn-primary d-inline-flex align-items-center" href="/admin/purchase-orders/add">
                <i class="bi bi-plus-lg me-2"></i> Tạo Đơn nhập hàng mới
            </a>
        </div>
    </AuthorizeView>
</div>

<!-- SEARCH -->
<div class="card mb-3 shadow-sm">
    <div class="card-body">
            <button class="btn btn-outline-secondary btn-sm" @onclick="GoBack" title="Quay lại" aria-label="Quay lại">
            <i class="bi bi-arrow-left">Quay Lại</i>
        </button>
        <div class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" @bind="searchTerm" @bind:event="oninput" placeholder="Tìm theo số phiếu, nhà cung cấp, trạng thái..." />
                    <button class="btn btn-outline-primary" @onclick="SearchPurchaseOrders" title="Tìm kiếm">
                        <i class="bi bi-filter-circle me-1"></i> Tìm
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="ClearSearch" title="Xóa lọc">
                        <i class="bi bi-x-circle me-1"></i> Xóa
                    </button>
                </div>
            </div>

            <div class="col-md-6 text-md-end text-muted small">
                @if (!isLoading && allOrders != null)
                {
                    <span>Trang <strong>@currentPage</strong> / <strong>@totalPages</strong> &nbsp;·&nbsp; Tổng <strong>@(allOrders?.Count ?? 0)</strong> đơn</span>
                }
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <LoadingSpinner />
}
else if (pagedOrders == null || !pagedOrders.Any())
{
    <div class="alert alert-info mt-4">
        Không có đơn nhập hàng nào phù hợp.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Số Phiếu</th>
                    <th>Nhà cung cấp</th>
                    <th>Ngày đặt hàng</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Xác nhận</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var po in pagedOrders)
                {
                    var actualStatus = po.Status ?? string.Empty;
                    var displayStatus = GetDisplayStatus(actualStatus);
                    var badgeClass = GetBadgeClass(actualStatus, displayStatus);

                    <tr>
                        <td><strong>@po.PurchaseOrderNumber</strong></td>
                        <td>@po.Supplier?.Name</td>
                        <td>@po.OrderDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="badge @badgeClass">@displayStatus</span>
                        </td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-info d-inline-flex align-items-center" href="@($"/admin/purchase-orders/{po.Id}")" title="Xem/Nhận hàng">
                                <i class="bi bi-box-arrow-in-down-left me-1"></i> Xem/Nhận
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-3" aria-label="Page navigation">
            <div class="d-flex align-items-center justify-content-between gap-2 flex-wrap">
                <div>
                    <a class="btn btn-outline-secondary btn-sm rounded-pill d-flex align-items-center"
                       href="@($"/admin/purchase-orders/page/{Math.Max(currentPage - 1, 1)}")"
                       aria-disabled="@(currentPage == 1 ? "true" : "false")"
                       title="Trang trước">
                        <i class="bi bi-chevron-left me-1"></i> Trước
                    </a>
                </div>

                <div class="d-flex align-items-center flex-wrap" style="gap:6px;">
                    @{
                        int maxButtons = 7;
                        int start = Math.Max(1, currentPage - maxButtons / 2);
                        int end = Math.Min(totalPages, start + maxButtons - 1);
                        if (end - start + 1 < maxButtons)
                        {
                            start = Math.Max(1, end - maxButtons + 1);
                        }
                    }

                    @if (start > 1)
                    {
                        <a class="btn btn-outline-secondary btn-sm rounded-pill" href="@($"/admin/purchase-orders/page/1")">1</a>
                        @if (start > 2)
                        {
                            <span class="text-muted px-2">…</span>
                        }
                    }

                    @for (int i = start; i <= end; i++)
                    {
                        var pageNum = i;
                        if (pageNum == currentPage)
                        {
                            <a class="btn btn-primary btn-sm rounded-pill" href="@($"/admin/purchase-orders/page/{pageNum}")" aria-current="page">@pageNum</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-secondary btn-sm rounded-pill" href="@($"/admin/purchase-orders/page/{pageNum}")">@pageNum</a>
                        }
                    }

                    @if (end < totalPages)
                    {
                        if (end < totalPages - 1)
                        {
                            <span class="text-muted px-2">…</span>
                        }
                        <a class="btn btn-outline-secondary btn-sm rounded-pill" href="@($"/admin/purchase-orders/page/{totalPages}")">@totalPages</a>
                    }
                </div>

                <div class="d-flex align-items-center gap-3">
                    <a class="btn btn-outline-secondary btn-sm rounded-pill d-flex align-items-center"
                       href="@($"/admin/purchase-orders/page/{Math.Min(currentPage + 1, totalPages)}")"
                       aria-disabled="@(currentPage == totalPages ? "true" : "false")"
                       title="Trang sau">
                        Sau <i class="bi bi-chevron-right ms-1"></i>
                    </a>

                    <div class="text-muted small">
                        Trang <strong>@currentPage</strong> / <strong>@totalPages</strong>
                    </div>
                </div>
            </div>
        </nav>
    }
}

@code {
    private List<PurchaseOrder>? allOrders;
    private IEnumerable<PurchaseOrder>? pagedOrders;

    private string? searchTerm;

    [Parameter]
    public int PageNumber { get; set; } = 1;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    private bool isLoading = true;
    private bool isWarehouse = false;

    protected override async Task OnParametersSetAsync()
    {
        var auth = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = auth.User;
        isWarehouse = user?.IsInRole("Warehouse") == true;

        currentPage = PageNumber > 0 ? PageNumber : 1;

        await LoadPurchaseOrders();
    }

    private async Task LoadPurchaseOrders()
    {
        isLoading = true;

        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();

            var query = db.PurchaseOrders
                .Include(po => po.Supplier)
                .AsNoTracking()
                .AsQueryable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var s = searchTerm.Trim().ToLower();
                query = query.Where(po =>
                    po.PurchaseOrderNumber.ToLower().Contains(s) ||
                    (po.Supplier != null && po.Supplier.Name.ToLower().Contains(s)) ||
                    (po.Status != null && po.Status.ToLower().Contains(s)));
            }

            // lấy tất cả (để tính phân trang)
            allOrders = await query
                .OrderByDescending(po => po.OrderDate)
                .ToListAsync();

            totalPages = (int)Math.Ceiling((double)allOrders.Count / pageSize);
            if (totalPages == 0) totalPages = 1;
            if (currentPage < 1) currentPage = 1;
            if (currentPage > totalPages) currentPage = totalPages;

            pagedOrders = allOrders
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchPurchaseOrders()
    {
        currentPage = 1;
        PageNumber = 1;
        await LoadPurchaseOrders();
    }

    private async Task ClearSearch()
    {
        searchTerm = null;
        currentPage = 1;
        PageNumber = 1;
        await LoadPurchaseOrders();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1) page = 1;
        currentPage = page;
        Navigation.NavigateTo($"/admin/purchase-orders/page/{currentPage}");
        await LoadPurchaseOrders();
    }

    private string GetDisplayStatus(string actualStatus)
    {
        if (isWarehouse && !string.IsNullOrEmpty(actualStatus) && actualStatus.StartsWith("Bị từ chối"))
            return "Đã đặt hàng";

        if (string.IsNullOrEmpty(actualStatus))
            return "-";

        return actualStatus;
    }

    private string GetBadgeClass(string actualStatus, string displayStatus)
    {
        if (!string.IsNullOrEmpty(actualStatus) && actualStatus.StartsWith("Đã nhận hàng"))
            return "bg-success";

        if (!string.IsNullOrEmpty(actualStatus) && actualStatus.StartsWith("Bị từ chối") && !isWarehouse)
            return "bg-danger text-white";

        if (actualStatus == "Chờ phê duyệt")
            return "bg-info text-dark";

        
        if (displayStatus == "Đã đặt hàng")
            return "bg-warning text-dark";

        return "bg-warning text-dark";
    }

    private async Task GoBack()
    {
        try
        {
            var handled = false;
            try
            {
                handled = await JS.InvokeAsync<bool>("eval", "(function(){ if (history.length > 1) { history.back(); return true; } return false; })()");
            }
            catch
            {
                handled = false;
            }

            if (!handled)
            {
                Navigation.NavigateTo("/admin");
            }
        }
        catch
        {
            Navigation.NavigateTo("/admin");
        }
    }
}
