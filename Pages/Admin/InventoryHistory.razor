@page "/admin/inventory-history/{ProductId:int}"
@attribute [Authorize(Roles = "Admin, Warehouse")]
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext

<h3>Lịch sử Tồn kho</h3>

<!-- FORM TÌM KIẾM -->
<div class="row mb-3">
    <div class="col-md-3">
        <input @bind="searchReason" class="form-control" placeholder="Nhập lý do thay đổi..." />
    </div>
    <div class="col-md-3">
        <InputDate @bind-Value="fromDate" class="form-control" />
    </div>
    <div class="col-md-3">
        <InputDate @bind-Value="toDate" class="form-control" />
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary me-2" @onclick="SearchLogs"><i class="bi bi-search"></i> Tìm kiếm</button>
        <button class="btn btn-secondary" @onclick="ClearSearch"><i class="bi bi-x-circle"></i> Xóa lọc</button>
    </div>
</div>

@if (product == null)
{
    <LoadingSpinner />
}
else
{
    <h5 class="mt-3">Sản phẩm: @product.Name</h5>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Thời gian</th>
                <th>Lý do</th>
                <th class="text-end">Tồn kho cũ</th>
                <th class="text-end">Thay đổi</th>
                <th class="text-end">Tồn kho mới</th>
            </tr>
        </thead>
        <tbody>
            @if (pagedLogs != null && pagedLogs.Any())
            {
                @foreach (var log in pagedLogs)
                {
                    <tr>
                        <td>@log.Timestamp.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@log.Reason</td>
                        <td class="text-end">@log.OldQuantity</td>
                        <td class="text-end @(log.QuantityChange >= 0 ? "text-success" : "text-danger")">
                            <strong>@log.QuantityChange.ToString("+#;-#;0")</strong>
                        </td>
                        <td class="text-end">@log.NewQuantity</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="5" class="text-center text-muted">Không có dữ liệu phù hợp</td></tr>
            }
        </tbody>
    </table>

    <!-- PHÂN TRANG -->
    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage - 1)">Trước</button>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    var pageNum = i;
                    <li class="page-item @(currentPage == pageNum ? "active" : "")">
                        <button class="page-link" @onclick="() => ChangePage(pageNum)">@pageNum</button>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <button class="page-link" @onclick="() => ChangePage(currentPage + 1)">Sau</button>
                </li>
            </ul>
        </nav>
    }

    <a href="/admin/products" class="btn btn-secondary mt-3">Quay lại</a>
}

@code {
    [Parameter]
    public int ProductId { get; set; }

    private Product? product;
    private IEnumerable<InventoryLog>? pagedLogs;

    // Bộ lọc tìm kiếm
    private string? searchReason;
    private DateTime? fromDate;
    private DateTime? toDate;

    // Phân trang
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;
    private int totalCount = 0;

    protected override async Task OnInitializedAsync()
    {
        product = await DbContext.Products.FindAsync(ProductId);
        if (product != null)
        {
            await LoadLogs(); // load lần đầu
        }
    }

    private IQueryable<InventoryLog> BuildQuery()
    {
        // Tạo query base (chưa gọi ToListAsync)
        var q = DbContext.InventoryLogs
                         .AsNoTracking()
                         .Where(l => l.ProductId == ProductId);

        if (!string.IsNullOrWhiteSpace(searchReason))
        {
            var s = searchReason.Trim();
            q = q.Where(l => EF.Functions.Like(l.Reason, $"%{s}%"));
        }

        if (fromDate.HasValue)
        {
            var f = fromDate.Value.Date;
            q = q.Where(l => l.Timestamp >= f);
        }

        if (toDate.HasValue)
        {
            var t = toDate.Value.Date.AddDays(1).AddTicks(-1);
            q = q.Where(l => l.Timestamp <= t);
        }

        q = q.OrderByDescending(l => l.Timestamp).ThenByDescending(l => l.Id);

        return q;
    }

    private async Task LoadLogs()
    {
        // Tính tổng trước
        var q = BuildQuery();
        totalCount = await q.CountAsync();

        totalPages = Math.Max(1, (int)Math.Ceiling(totalCount / (double)pageSize));
        if (currentPage < 1) currentPage = 1;
        if (currentPage > totalPages) currentPage = totalPages;

        // Lấy page trực tiếp từ DB (nhanh và chính xác)
        pagedLogs = await q
            .Skip((currentPage - 1) * pageSize)
            .Take(pageSize)
            .ToListAsync();
    }

    private async Task SearchLogs()
    {
        currentPage = 1;
        await LoadLogs();
    }

    private async Task ClearSearch()
    {
        searchReason = null;
        fromDate = null;
        toDate = null;
        currentPage = 1;
        await LoadLogs();
    }

    private async Task ChangePage(int page)
    {
        if (page < 1) page = 1;
        if (page > totalPages) page = totalPages;
        if (page == currentPage) return;
        currentPage = page;
        await LoadLogs();
    }
}
