@page "/admin/return-receipts"
@page "/admin/return-receipts/page/{PageNumber:int}"
@attribute [Authorize(Roles = "Admin, Purchasing, Warehouse")]
@using Microsoft.EntityFrameworkCore
@using DoAnTotNghiep.Models
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<h3 class="mb-3">Quản lý Phiếu thu hồi</h3>

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <div class="row g-2 align-items-center">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input class="form-control" @bind="searchTerm" @bind:event="oninput" placeholder="Tìm theo số phiếu, đơn liên quan, trạng thái..." />
                    <button class="btn btn-outline-primary" @onclick="SearchReturnReceipts" title="Tìm kiếm">
                        <i class="bi bi-filter-circle me-1"></i> Tìm
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="ClearSearch" title="Xóa lọc">
                        <i class="bi bi-x-circle me-1"></i> Xóa
                    </button>
                </div>
            </div>

            <div class="col-md-6 text-md-end text-muted small">
                @if (!isLoading && allReceipts != null)
                {
                    <span>Trang <strong>@currentPage</strong> / <strong>@totalPages</strong> &nbsp;·&nbsp; Tổng <strong>@(allReceipts?.Count ?? 0)</strong> phiếu</span>
                }
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <LoadingSpinner />
}
else if (pagedReceipts == null || !pagedReceipts.Any())
{
    <div class="alert alert-info mt-4">
        Không có phiếu thu hồi nào phù hợp.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Số Phiếu</th>
                    <th>Đơn liên quan</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rr in pagedReceipts)
                {
                    var badgeClass = GetBadgeClass(rr.Status);
                    <tr>
                        <td><strong>@rr.ReturnReceiptNumber</strong></td>
                        <td>@(rr.RelatedOrderId?.ToString() ?? "-")</td>
                        <td>@rr.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td><span class="badge @badgeClass">@rr.Status</span></td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-info d-inline-flex align-items-center" href="@($"/admin/return-receipts/{rr.Id}")" title="Xem/Thao tác">
                                <i class="bi bi-box-arrow-in-down-left me-1"></i> Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-3" aria-label="Page navigation">
            <div class="d-flex align-items-center justify-content-between gap-2 flex-wrap">
                <div>
                    <a class="btn btn-outline-secondary btn-sm rounded-pill d-flex align-items-center"
                       href="@($"/admin/return-receipts/page/{Math.Max(currentPage - 1, 1)}")"
                       aria-disabled="@(currentPage == 1 ? "true" : "false")"
                       title="Trang trước">
                        <i class="bi bi-chevron-left me-1"></i> Trước
                    </a>
                </div>

                <div class="d-flex align-items-center flex-wrap" style="gap:6px;">
                    @{
                        int maxButtons = 7;
                        int start = Math.Max(1, currentPage - maxButtons / 2);
                        int end = Math.Min(totalPages, start + maxButtons - 1);
                        if (end - start + 1 < maxButtons)
                        {
                            start = Math.Max(1, end - maxButtons + 1);
                        }
                    }

                    @if (start > 1)
                    {
                        <a class="btn btn-outline-secondary btn-sm rounded-pill" href="@($"/admin/return-receipts/page/1")">1</a>
                        @if (start > 2)
                        {
                            <span class="text-muted px-2">…</span>
                        }
                    }

                    @for (int i = start; i <= end; i++)
                    {
                        var pageNum = i;
                        if (pageNum == currentPage)
                        {
                            <a class="btn btn-primary btn-sm rounded-pill" href="@($"/admin/return-receipts/page/{pageNum}")" aria-current="page">@pageNum</a>
                        }
                        else
                        {
                            <a class="btn btn-outline-secondary btn-sm rounded-pill" href="@($"/admin/return-receipts/page/{pageNum}")">@pageNum</a>
                        }
                    }

                    @if (end < totalPages)
                    {
                        if (end < totalPages - 1)
                        {
                            <span class="text-muted px-2">…</span>
                        }
                        <a class="btn btn-outline-secondary btn-sm rounded-pill" href="@($"/admin/return-receipts/page/{totalPages}")">@totalPages</a>
                    }
                </div>

                <div class="d-flex align-items-center gap-3">
                    <a class="btn btn-outline-secondary btn-sm rounded-pill d-flex align-items-center"
                       href="@($"/admin/return-receipts/page/{Math.Min(currentPage + 1, totalPages)}")"
                       aria-disabled="@(currentPage == totalPages ? "true" : "false")"
                       title="Trang sau">
                        Sau <i class="bi bi-chevron-right ms-1"></i>
                    </a>

                    <div class="text-muted small">
                        Trang <strong>@currentPage</strong> / <strong>@totalPages</strong>
                    </div>
                </div>
            </div>
        </nav>
    }
}

@code {
    private List<ReturnReceipt>? allReceipts;
    private IEnumerable<ReturnReceipt>? pagedReceipts;

    private string? searchTerm;

    [Parameter]
    public int PageNumber { get; set; } = 1;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages = 1;

    private bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        currentPage = PageNumber > 0 ? PageNumber : 1;
        await LoadReturnReceipts();
    }

    private async Task LoadReturnReceipts()
    {
        isLoading = true;
        try
        {
            await using var db = await DbFactory.CreateDbContextAsync();
            var query = db.ReturnReceipts
                          .Include(r => r.RelatedOrder)
                          .AsNoTracking()
                          .AsQueryable();

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                var s = searchTerm.Trim().ToLower();
                query = query.Where(rr =>
                    (rr.ReturnReceiptNumber != null && rr.ReturnReceiptNumber.ToLower().Contains(s)) ||
                    (rr.RelatedOrderId != null && rr.RelatedOrderId.ToString().Contains(s)) ||
                    (rr.Status != null && rr.Status.ToLower().Contains(s)));
            }

            allReceipts = await query.OrderByDescending(r => r.CreatedAt).ToListAsync();
            totalPages = (int)Math.Ceiling((double)allReceipts.Count / pageSize);
            if (totalPages == 0) totalPages = 1;
            if (currentPage < 1) currentPage = 1;
            if (currentPage > totalPages) currentPage = totalPages;

            pagedReceipts = allReceipts.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task SearchReturnReceipts()
    {
        currentPage = 1;
        PageNumber = 1;
        await LoadReturnReceipts();
    }

    private async Task ClearSearch()
    {
        searchTerm = null;
        currentPage = 1;
        PageNumber = 1;
        await LoadReturnReceipts();
    }

    private string GetBadgeClass(string status)
    {
        if (!string.IsNullOrEmpty(status) && status.StartsWith("Đã nhận hàng"))
            return "bg-success";

        if (!string.IsNullOrEmpty(status) && status.StartsWith("Bị từ chối"))
            return "bg-danger text-white";

        if (status == "Chờ phê duyệt")
            return "bg-info text-dark";

        return "bg-warning text-dark";
    }
}
